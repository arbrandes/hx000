  <option:providers>
    - name: city-dx1
      capacity: -1
      environment: hot_city-dx1.yaml
  </option:providers>
  <option:tests><![CDATA[  
    - |
      #!/bin/bash
      # Check for alice login
      logins=$(ssh alice last training | grep training | wc -l)
      if [ $logins -lt 1 ]; then
        # Output a hint to stderr
        echo "You haven't logged in to alice, yet." >&2
        exit 1
      fi
      exit 0
  ]]></option:tests>
